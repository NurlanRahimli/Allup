@model IEnumerable<Product>


<div class="product-items">
    <div class="row product-active">
        @for (int i = 0; i < (int)Math.Ceiling((decimal)Model.Count() / 2); i++)
        {
            <div class="col-lg-2">
                @foreach (Product item in Model.Skip(i * 2).Take(2))
                {
                    <div class="single-product mt-30">
                        <div class="product-image">
                            <a href="single-product.html">
                                <img class="first-image" src="~/assets/images/product/@item.MainImage" alt="product">
                                <img class="second-image" src="~/assets/images/product/@item.HoverImage" alt="product">
                            </a>
                            <ul class="product-meta">
                                <li><a href="#"><i class="icon ion-bag"></i></a></li>
                                <li><a href="#"><i class="icon ion-android-favorite-outline"></i></a></li>
                                <li><a href="#"><i class="icon ion-android-options"></i></a></li>
                                <li><a data-toggle="modal" data-target="#productQuickModal" href="#"><i class="icon ion-android-open"></i></a></li>
                            </ul>
                            @if (item.DiscountedPrice > 0)
                            {
                                <span class="discount-product">-@((((item.Price * 100) / item.DiscountedPrice) - 100).ToString("0.##"))%</span>
                            }
                        </div>
                        <div class="product-content">
                            <ul class="product-rating">
                                <li><i class="fas fa-star"></i></li>
                                <li><i class="fas fa-star"></i></li>
                                <li><i class="fas fa-star"></i></li>
                                <li><i class="fas fa-star"></i></li>
                                <li><i class="fas fa-star"></i></li>
                            </ul>
                            <h4 class="product-title"><a href="single-product.html">@item.Title</a></h4>
                            <div class="product-price">
                                @if (item.DiscountedPrice > 0)
                                {
                                    <span class="regular-price">€@item.Price</span>
                                    <span class="price-sale">€@item.DiscountedPrice</span>
                                }
                                else
                                {
                                    <span class="price-sale">€@item.Price</span>
                                }
                            </div>
                        </div>
                    </div> <!-- single product -->
                }
            </div>
        }
    </div> <!-- row -->
</div> <!-- product items -->
